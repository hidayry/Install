Pacman -S reflector
reflector -c ID,SG -l 7 -f 7 -p https --sort rate  --save /etc/pacman.d/mirrorlist
Pacman -Syy

Mount /dev/sdaxxx /mnt       (root linux)
pacstrap /mnt base base-devel  linux-lts linux-firmware micro intel-ucode

genfstab -U /mnt >> /mnt/etc/fstab
cat /mnt/etc/fstab


arch-chroot /mnt
Micro /etc/locale.gen
